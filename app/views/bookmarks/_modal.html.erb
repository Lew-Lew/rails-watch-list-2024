<div class="modal fade" id="newBookmarkModal" tabindex="-1" aria-labelledby="newBookmarkModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fs-5" id="newBookmarkModalLabel">Add a movie to your <%= list.name %> list</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [list, bookmark] do |f|  %>
          <%= f.association :movie %>
          <%= f.input :comment %>
          <div>
            <%= f.button :submit, 'add a movie', class: 'btn btn-primary' %>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>