<div class="section-header" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('cover.png') %>);">
  <div class="container">
    <div>
      <h1>Save any kind of movies</h1>
    </div>
  </div>
</div>

<div class="section-lists m-5">
  <div class="container py-5">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h2>My lists</h2>
      <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#newListModal">
        Create a list
      </button>
    </div>
    <div class="row">
      <% @lists.each do |list| %>
        <div class="co-12 col-sm-6 col-md-4 mb-3">
          <%= link_to list_path(list), class:"text-decoration-none" do %>
            <% if list.photo.attached? %>
              <div class="card-category mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
                <%= list.name %>
              </div>
            <% else %>
              <div class="card-category mt-3" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path("list_background.jpg") %>)'>
                <%= list.name %>
              </div>
            <% end %>
          <% end %>  
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'lists/modal', list: @list %>
